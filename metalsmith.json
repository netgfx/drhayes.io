{
  "metadata": {
    "title": "drhayes.io"
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "handlebars"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "default": "layout.html",
      "directory": "layouts"
    },
    "metalsmith-less": {
      "pattern": "css/style.less",
      "render": {
        "path": "css/"
      }
    },
    "metalsmith-ignore": [
      "drafts/*",
      "**/_*.*",
      "**/_*"
    ]
  }
}
