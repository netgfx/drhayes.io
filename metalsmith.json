{
  "metadata": {
    "title": "drhayes.io"
  },
  "plugins": {
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":title"
    },
    "metalsmith-templates": {
      "engine": "handlebars"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "default": "layout.html",
      "directory": "layouts"
    },
    "metalsmith-postcss": {
      "plugins": [
        "postcss-nested",
        "postcss-simple-vars"
      ]
    },
    "metalsmith-ignore": [
      "drafts/*",
      "**/_*.*",
      "**/_*"
    ]
  }
}
